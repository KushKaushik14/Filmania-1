<% if user_signed_in? %>
<h1>
    Username: <%= @profile.username %>
    <br />
    Id: <%= @profile.id %>
</h1>
<br />
<div>
  <h1 style="margin-bottom: 1px">Reviews:</h1>
  <% @profile_movies.each do |movie| %>
  <ul>
    <li>
      <strong>
        Movie: <%= link_to movie.movie, movie_path(movie) %>
        &nbsp;
        Rating: <%= movie.rating %>
      </strong>
    </li>
  </ul>
  <% end %>
  <h1><%= link_to 'Back', movies_path %></h1>
</div>
<% else %>
  <h1>
    <%= link_to "signin", user_session_path %>

    <%= link_to "signup", new_user_registration_path %>
  </h1>
<% end %>